<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.acctmgmt.mapper.UserRoleMapper">
	<insert id="save" parameterType="UserRole">
		INSERT INTO USER_ROLE VALUES(#{userId}, #{role})
	</insert>
	
	<select id="getRoleById" parameterType="Long" resultType="String">
		SELECT ROLE FROM USER_ROLE WHERE USER_ID = #{userId} 
	</select>
</mapper>