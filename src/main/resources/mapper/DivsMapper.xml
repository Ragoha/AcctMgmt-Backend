<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.acctmgmt.mapper.DivsMapper">
	
	<select id="findDivCdAndDivNmByCoCd" parameterType="int" resultType="Divs">
		SELECT DIV_CD, DIV_NM FROM DIVS WHERE CO_CD = #{coCd};
	</select>
	
	<select id="findDivCdAndDivNmBySearch" parameterType="String" resultType="Divs">
	  SELECT *
	  FROM Divs
	  WHERE CONCAT(CO_CD, DIV_NM) LIKE '%${keyword}%'
	</select>

</mapper>