<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.acctmgmt.mapper.EmployeeMapper">

	<select id="getTime" resultType="String">
		SELECT DATE_FORMAT(NOW(),
		'%Y-%m-%d %H:%i:%s');
	</select>

	<select id="getEmployee" parameterType="String"
		resultType="Employee">
		SELECT CO_CD, emp_ID, emp_PW, emp_EMAIL, emp_TEL, emp_NAME,
		emp_SX, div_CD, dept_CD, emp_OD, emp_AUTH FROM EMP WHERE emp_ID = #{empId};
	</select>

	<select id="getEmployeeList" resultType="Employee">
		SELECT * from EMP;
	</select>

	<insert id="save" parameterType="Employee">
		INSERT INTO EMP
		(emp_ID, emp_NAME, emp_PW, emp_EMAIL, emp_SX, emp_TEL, CO_CD, emp_OD, emp_AUTH)
		VALUES
		(#{empId}, #{empName}, #{empPw}, #{empEmail}, #{empSx}, #{empTel}, #{coCd},
		#{empOd}, #{empAuth});
	</insert>

	<update id="updateEmployee" parameterType="Employee">
		<!-- UPDATE EMP
		SET
		D_PS = #{dPs},
		D_EMAIL = #{dEmail},
		D_TEL = #{dTel},
		D_NAME = #{dName},
		D_BDAY = #{dBday},
		D_ADR = #{dAdr},
		D_ZP = #{dZp},
		D_SX = #{dSx},
		D_BCD = #{dBcd},
		D_CD = #{dCd},
		D_OD = #{dOd}
		WHERE D_ID = #{dId} -->
	</update>

	<delete id="deleteEmployee" parameterType="String">
		DELETE FROM EMP WHERE
		emp_ID = #{empId}
	</delete>

	<select id="loginEmployee" parameterType="String" resultType="Employee">
		SELECT * from EMP where emp_ID = #{empId} and emp_PS = #{empPs}
	</select>


	<select id="findByEmail" resultType="Employee">
		SELECT * FROM EMP where emp_EMAIL = #{empEmail}
	</select>
	
	<select id="findByEmails" resultType="Employee">
		SELECT * FROM EMP where emp_ID = #{empId}
	</select>
	
	<select id="getIdByEmail" parameterType="String" resultType="Long">
		SELECT emp_Id FROM EMP WHERE emp_ID = #{empId}
	</select>
</mapper>